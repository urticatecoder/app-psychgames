{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES2019"],
    "moduleResolution": "node",
    "declaration": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "removeComments": true
  }
}
