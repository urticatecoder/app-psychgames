{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "declaration": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "removeComments": true
  }
}
